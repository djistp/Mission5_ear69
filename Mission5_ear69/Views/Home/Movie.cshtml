@{
    ViewData["Title"] = "Fill out Movie";
} 
@model Mission5_ear69.Models.MovieResponse
  
<div>
    @*this is the form where the user inputs their data*@
    <form method="post">
        <label asp-for="CategoryId">Category</label>
        <select asp-for="CategoryId">
            @foreach (Category c in ViewBag.Categories)
            {
                <option value="@c.CategoryId">@c.CategoryName</option>
            }
        </select> <br />
        <label asp-for="Title">Movie Title</label>
        <input asp-for="Title" /> <br />
        <label asp-for="Year">Movie Year</label>
        <input asp-for="Year" /><br />
        <label asp-for="Director">Movie Director</label>
        <input asp-for="Director" /><br />
        <label asp-for="Rating">Movie Rating</label>
        <select asp-for="Rating">
            <option value="G">G</option>
            <option value="PG">PG</option>
            <option value="PG13">PG-13</option>
            <option value="R">R</option>
            <option value="NR">NR</option>
            <option value="UR">UR</option>
            <option value="TV14">TV-14</option>
            <option value="TVPG">TV-PG</option>
            <option value="TVY7">TV-Y7</option>
        </select>
        <br />
        <label asp-for="Edit">Edited?</label>
        <select asp-for="Edit">
            <option value="true">Yes</option>
            <option value="false">No</option>
        </select>
        <br />
        <label asp-for="Lent">Lent to:</label>
        <input asp-for="Lent" />
        <br />
        <label asp-for="Notes">Notes</label>
        <input asp-for="Notes" />
        <br />
        <button type="submit">Submit Movie</button>
        <div asp-validation-summary="All">
        </div>
    </form>
</div>